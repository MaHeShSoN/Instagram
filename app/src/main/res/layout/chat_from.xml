<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/otherImage"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_custom_button"
        android:maxWidth="240dp"
        android:padding="16dp"
        android:text="This is my Massage"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/otherImage"
        app:layout_constraintBottom_toBottomOf="@id/otherImage"
        app:layout_constraintEnd_toStartOf="@id/otherImage" />
</androidx.constraintlayout.widget.ConstraintLayout>